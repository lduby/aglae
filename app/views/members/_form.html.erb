
<%= form_for @member do |f| %>
<div id="member_type_select">
	<fieldset>
		<legend>Member Type</legend>
		<div>
			<%= select_tag(:member_category_id, options_for_select(MemberCategory.all.collect {|c| [c.title, c.id]})) %>
		</div>
	</fieldset>
</div>
<div class="row-fluid">
	<div class="span6">
		<div id="group_details">
			<fieldset>
				<legend>Group Information</legend>
				<div>
					<%= f.label :organization, "Organization Name" %>
					<%= f.text_field :organization %>
				</div>
			</fieldset>
		</div>
		<div id="individual_details">
			<fieldset>
				<legend>Personal Information</legend>
				<div>
					<%= f.label :lastname, "Lastname" %>
					<%= f.text_field :lastname %>
				</div>
				<div>
					<%= f.label :firstname, "Firstname" %>
					<%= f.text_field :firstname %>
				</div>
				<div>
					<%= f.label "Email" %>
					<input type="text" id="member_email" name="email" />
				</div>
			</fieldset>
		</div>
	</div>
	<div class="span6">
		<div id="contact_details">
			<fieldset>
				<legend>Contact details</legend>
				<div>
					<%= f.label :address, "Address" %>
					<%= f.text_field :address %>
				</div>
				<div>
					<%= f.label :zipcode, "Zipcode" %>
					<%= f.text_field :zipcode %>
				</div>
				<div>
					<%= f.label :city, "City" %>
					<%= f.text_field :city %>
				</div>
				<div>
					<%= f.label :phone, "Phone" %>
					<%= f.text_field :phone %>
				</div>
			</fieldset>
		</div>
	</div>
</div>
<div>
	<%= f.submit "Create", :id => "MemberFormSubmit" %>
</div>
<% end %>