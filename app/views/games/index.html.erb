<br/>
<div class="row-fluid">
  <div class="span2" id="title">
    <h1>Games</h1>
  </div>
  <div class="span8" id="views_toolbar">
    <div class="btn-group">
      <button id="borrowed_view" class="btn view active">Borrowings</button>
      <button id="selection_view" class="btn view">Selection</button>
      <button id="animation_view" class="btn view">Animation</button>
      <button id="big_view" class="btn view">Big</button>
      <button id="broken_view" class="btn view">Broken</button>
    </div>
  </div>
  <div class="span2 pull-right" id="actions_toolbar">
    <div class="btn-group">
      <!-- <a id="newgamebutton" class="btn action" href="<%= new_game_path %>">New Game</a> -->
    </div>
  </div>
</div>
</br>
<div class="row-fluid">
  <div class="span8" id="games_list">
    <% (1..@games_list_lines).each do |line| %>
      <div class="row-fluid">
        <ul class="thumbnails">
          <% @games.slice(3 * (line - 1), 3).each do |game| %>
            <% unless game.nil? %>
              <li class="span4">
                <div class="thumbnail">
                  <img src="img/default_game_cover.png" alt="">
                  <div class="caption">
                    <h3><%= game.name %></h3>
                    <p><%= game.description.slice(0,160) + "..." %></p>
                    <p><a href="#" class="btn btn-primary">Action</a> <a href="#" class="btn">Action</a></p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %> 
  </div>
  <div class="span4 well" id="game_details">

  </div>
</div>


